<div class="container mx-auto p-4 max-w-2xl">
  <h1 class="text-3xl font-bold mb-6 text-gray-800">Detalles de tu Suscripción</h1>

  <div class="bg-white shadow-lg rounded-lg p-8 border border-green-200">
    <div class="flex items-center mb-4">
      <span class="bg-green-100 text-green-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded-full">Activa</span>
    </div>
    <h2 class="text-2xl font-semibold text-gray-900">Plan: <%= @subscription.plan.name %></h2>
    <p class="text-gray-600 mt-2"><%= @subscription.plan.details %></p>

    <div class="border-t mt-6 pt-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700">
        <p><strong class="font-medium text-gray-900">Fecha de Inicio:</strong> <%= @subscription.start_date.strftime("%d de %B de %Y") %></p>
        <p><strong class="font-medium text-gray-900">Próximo Vencimiento:</strong> <%= @subscription.end_date.strftime("%d de %B de %Y") %></p>
      </div>
    </div>

    <div class="mt-8 text-center">
        <%= link_to 'Ver todos los planes', plans_path, class: "text-indigo-600 hover:text-indigo-800 font-semibold" %>
    </div>
  </div>
</div>
