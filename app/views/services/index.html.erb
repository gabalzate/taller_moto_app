<div class="container mx-auto p-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Servicios de <%= @workshop.name %></h1>
    <%= link_to 'Añadir Servicio', new_workshop_service_path(@workshop), class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <table class="min-w-full">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nombre</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Precio</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Acciones</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @services.each do |service| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900"><%= service.name %></td>
            <td class="px-6 py-4 whitespace-nowrap">$<%= number_to_currency(service.price, unit: "", separator: ".", delimiter: ",") %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to 'Editar', edit_workshop_service_path(@workshop, service), class: "text-indigo-600 hover:text-indigo-900" %>
              <span class="mx-2 text-gray-300">|</span>
              <%= link_to 'Eliminar', workshop_service_path(@workshop, service), data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro?' }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
        <% if @services.empty? %>
          <tr>
            <td colspan="3" class="px-6 py-4 text-center text-gray-500">Aún no has añadido ningún servicio.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
