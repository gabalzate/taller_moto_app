<%# app/views/services/_form.html.erb %>

<%= form_with(model: [@workshop, service], local: true, html: { class: "max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md space-y-6" }) do |form| %>

  <%# Bloque para mostrar errores de validación si los hay %>
  <% if service.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(service.errors.count, "error") %> impidieron guardar este servicio:</h2>
      <ul class="list-disc list-inside">
        <% service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# --- Campos del Formulario --- %>
  <div>
    <%= form.label :name, "Nombre del Servicio", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.text_field :name, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :description, "Descripción (Opcional)", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.text_area :description, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :price, "Precio (COP)", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.number_field :price, step: 0.01, placeholder: "Ej: 50000.00", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <%# --- Botones de Acción --- %>
  <div class="flex items-center justify-end space-x-4 pt-4">
    <%= link_to 'Cancelar', workshop_services_path(@workshop), class: "inline-block align-baseline font-bold text-sm text-gray-600 hover:text-gray-800" %>
    <%= form.submit "Guardar Servicio", class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
  </div>
<% end %>
