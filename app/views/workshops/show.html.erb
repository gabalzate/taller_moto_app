<div class="container mx-auto p-4 max-w-lg">
  <div class="bg-white shadow-lg rounded-lg p-6">
    <h1 class="text-3xl font-bold mb-4 text-gray-800"><%= @workshop.name %></h1>

    <p class="text-gray-600 mb-2">
      <strong>Ciudad:</strong> <%= @workshop.city %>
    </p>
    <p class="text-gray-600 mb-2">
      <strong>Teléfono:</strong> <%= @workshop.phone %>
    </p>
    <p class="text-gray-600 mb-2">
      <strong>Dirección:</strong> <%= @workshop.address %>
    </p>
    <p class="text-gray-600 mb-2">
      <strong>Horario:</strong> <%= @workshop.opening_hours %>
    </p>
    <p class="text-gray-600 mb-2">
      <strong>Estado:</strong> <%= @workshop.status ? 'Activo' : 'Inactivo' %>
    </p>

    <div class="mt-6 flex space-x-4">
      <%= link_to 'Editar Taller', edit_workshop_path(@workshop), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
      <%= link_to 'Volver a la lista', workshops_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
    

    <div class="mt-6 flex space-x-4">
      <%= link_to 'Editar Taller', edit_workshop_path(@workshop), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>

      <%= link_to 'Eliminar Taller', workshop_path(@workshop), class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50", data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro de que quieres eliminar este taller?' } %>

      <%= link_to 'Volver a la lista', workshops_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>




  </div>
</div>
