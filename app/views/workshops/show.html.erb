<div class="container mx-auto p-4 max-w-lg">
  <div class="bg-white shadow-lg rounded-lg p-6">
    <h1 class="text-3xl font-bold mb-4 text-gray-800"><%= @workshop.name %></h1>

    <p class="text-gray-600 mb-2">
      <strong>Ciudad:</strong> <%= @workshop.city %>
    </p>
    <p class="text-gray-600 mb-2">
      <strong>Teléfono:</strong> <%= @workshop.phone %>
    </p>
    <p class="text-gray-600 mb-2">
      <strong>Dirección:</strong> <%= @workshop.address %>
    </p>
    <p class="text-gray-600 mb-2">
      <strong>Horario:</strong> <%= @workshop.opening_hours %>
    </p>
    <p class="text-gray-600 mb-2">
      <strong>Estado:</strong> <%= @workshop.status ? 'Activo' : 'Inactivo' %>
    </p>

    <div class="mt-6 flex space-x-4">

      <%= link_to 'Editar Taller', edit_workshop_path(@workshop), class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded" %>

      <%= link_to 'Eliminar Taller', @workshop, data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro de que quieres eliminar este taller?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>

      <%= link_to 'Volver a la lista', workshops_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded" %>

    </div>

  </div>
</div>
