<%= form_with(model: [@intervention, @output_sheet], local: true, html: { class: "max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md space-y-6" }) do |form| %>
  <% if @output_sheet.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(@output_sheet.errors.count, "error") %> impidieron guardar esta hoja de salida:</h2>
      <ul>
        <% @output_sheet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :mileage, "Kilometraje de Salida", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.number_field :mileage, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :fuel_level, "Nivel de Gasolina (%)", class: "block text-sm font-bold text-gray-700 mb-2" %>
      <%= form.number_field :fuel_level, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div>
      <%= form.label :oil_level, "Nivel de Aceite (%)", class: "block text-sm font-bold text-gray-700 mb-2" %>
      <%= form.number_field :oil_level, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  </div>

  <div>
    <%= form.label :repaired_parts, "Partes Reparadas o Reemplazadas", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.text_area :repaired_parts, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :notes, "Notas Adicionales de Salida", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.text_area :notes, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :disclaimer, "Descargo de GarantÃ­a", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.text_area :disclaimer, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-end space-x-4">
    <%= link_to 'Cancelar', intervention_path(@intervention), class: "inline-block align-baseline font-bold text-sm text-gray-600 hover:text-gray-800" %>
    <%= form.submit "Guardar Hoja de Salida", class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
  </div>
<% end %>
