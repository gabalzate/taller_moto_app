<!DOCTYPE html>
<html>
  <head>
    <title>TallerMotoApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 font-sans">

    <header class="bg-white shadow">
      <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <div>
          <%= link_to 'TallerMotoApp', root_path, class: "text-xl font-bold text-gray-800" %>
        </div>
        <div>
          <% if user_signed_in? %>
            <%= link_to 'Cerrar sesión', destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
          <% else %>
            <%= link_to 'Iniciar sesión', new_user_session_path, class: "text-gray-800 hover:text-indigo-600" %>
          <% end %>
        </div>
      </nav>
    </header>

    <% if notice %>
      <div class="bg-green-100 text-green-800 p-4 text-center" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="bg-red-100 text-red-800 p-4 text-center" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <main class="container mx-auto p-6">
      <%= yield %>
    </main>

  </body>
</html>
