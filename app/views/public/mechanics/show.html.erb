<%# app/views/public/mechanics/show.html.erb %>

<div class="max-w-3xl mx-auto">
  <div class="bg-white shadow-lg rounded-lg p-8 mb-8">
    <div class="flex items-center">
      <%# Placeholder for a future profile picture %>
      <div class="h-24 w-24 rounded-full bg-gray-300 flex-shrink-0 flex items-center justify-center">
        <svg class="h-12 w-12 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
        </svg>
      </div>
      <div class="ml-6">
        <h1 class="text-3xl font-bold text-gray-900"><%= @mechanic.full_name %></h1>
        <p class="text-lg text-gray-600">Mecánico Profesional</p>
        <%# Link to the workshop the mechanic belongs to %>
        <% if @mechanic.workplace %>
          <p class="text-sm text-gray-500 mt-1">
            Taller: <%= link_to @mechanic.workplace.name, public_workshop_path(@mechanic.workplace), class: "text-indigo-600 hover:text-indigo-800" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="bg-white shadow-lg rounded-lg p-6 text-center">
      <h2 class="text-lg font-semibold text-gray-600">Intervenciones Completadas</h2>
      <p class="text-5xl font-bold text-indigo-600 mt-2"><%= @total_interventions %></p>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-800 mb-4 text-center">Especialidad en Modelos</h2>
      <% if @top_motorcycles.any? %>
        <ul class="list-disc list-inside text-gray-700 space-y-1">
          <% @top_motorcycles.each do |(brand, model), count| %>
            <li><%= brand %> <%= model %> <span class="text-gray-500">(<%= count %> reparaciones)</span></li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-center text-gray-500">Aún no hay datos de especialidad.</p>
      <% end %>
    </div>
  </div>
</div>
