<h1 class="text-3xl font-bold mb-2 text-gray-800">Hoja de Vida de la Moto</h1>
<p class="text-lg text-gray-600 mb-6">Placa: <%= @motorcycle.license_plate %> (<%= @motorcycle.brand %> <%= @motorcycle.model %>)</p>

<div class="space-y-8">
  <% if @interventions.any? %>
    <% @interventions.each do |intervention| %>
      <div class="bg-white shadow-lg rounded-lg p-6 border-l-4 border-indigo-500">
        <div class="flex justify-between items-center">
          <h2 class="text-xl font-semibold text-gray-800">
            Intervenci√≥n en: <%= intervention.workshop.name %>
          </h2>
          <span class="text-sm font-medium text-gray-500"><%= intervention.entry_date.strftime("%d de %B, %Y") %></span>
        </div>
        <hr class="my-3">
        <p class="text-gray-700"><strong class="font-medium">Problema reportado:</strong> <%= intervention.entry_order&.problem_description || "No especificado" %></p>
        <p class="text-gray-700 mt-2"><strong class="font-medium">Estado:</strong> <%= intervention.status %></p>

        <div class="mt-4">
          <%= link_to 'Ver detalles completos', public_intervention_path(intervention.public_token), class: "text-indigo-600 hover:text-indigo-800 font-semibold", target: "_blank" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center text-gray-500">Esta motocicleta no tiene intervenciones registradas.</p>
  <% end %>
</div>


<div class="mt-8 text-center">
  <%= link_to 'Volver al Inicio', root_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded" %>
</div>
