<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg mt-10">
  <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Consultar Hoja de Vida de tu Moto</h1>

  <%= form_with url: public_motorcycle_history_result_path, method: :get, local: true do |form| %>
    <div class="mb-4">
      <%= label_tag :license_plate, "Placa de la Moto", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= text_field_tag :license_plate, nil, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mb-6">
      <%= label_tag :document_number, "NÃºmero de Documento del Propietario", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= text_field_tag :document_number, nil, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="flex items-center justify-center">
      <%= form.submit "Consultar Historial", class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
    </div>
  <% end %>
</div>
