<%# app/views/mechanics/show.html.erb %>

<div class="container mx-auto p-4 max-w-lg">
  <div class="bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-3xl font-bold mb-4 text-gray-800"><%= @mechanic.first_name %> <%= @mechanic.last_name %></h1>
    <p class="text-sm text-gray-500 mb-6">Mecánico</p>

    <div class="border-t border-gray-200 pt-4">
      <dl class="space-y-4">
        <div class="flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Correo Electrónico</dt>
          <dd class="text-sm text-gray-900"><%= @mechanic.email %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Número de Documento</dt>
          <dd class="text-sm text-gray-900"><%= @mechanic.document_number %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm font-medium text-gray-500">Teléfono</dt>
          <dd class="text-sm text-gray-900"><%= @mechanic.phone_number %></dd>
        </div>
      </dl>
    </div>

    <%# --- Botones de Acción --- %>
    <div class="mt-8 border-t border-gray-200 pt-6 flex space-x-4">
      <%# Dejaremos los enlaces de 'Editar' y 'Eliminar' para el siguiente paso %>
      <%= link_to 'Editar Mecánico', edit_workshop_mechanic_path(@workshop, @mechanic), class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to 'Eliminar Mecánico', workshop_mechanic_path(@workshop, @mechanic), data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro de que quieres eliminar a este mecánico?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to 'Volver a la lista', workshop_mechanics_path(@workshop), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
