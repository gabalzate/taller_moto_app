<%# app/views/mechanics/_form.html.erb %>

<%= form_with(model: [@workshop, @mechanic], url: workshop_mechanics_path(@workshop, @mechanic), local: true, html: { class: "max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md space-y-6" }) do |form| %>

  <%# Bloque para mostrar errores de validación si los hay %>
  <% if @mechanic.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(@mechanic.errors.count, "error") %> impidieron guardar al mecánico:</h2>
      <ul class="list-disc list-inside">
        <% @mechanic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# --- Campos del Formulario --- %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :first_name, "Nombres", class: "block text-sm font-bold text-gray-700 mb-2" %>
      <%= form.text_field :first_name, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>
    <div>
      <%= form.label :last_name, "Apellidos", class: "block text-sm font-bold text-gray-700 mb-2" %>
      <%= form.text_field :last_name, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>
  </div>

  <div>
    <%= form.label :email, "Correo Electrónico", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.email_field :email, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :document_number, "Número de Documento", class: "block text-sm font-bold text-gray-700 mb-2" %>
      <%= form.text_field :document_number, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>
    <div>
      <%= form.label :phone_number, "Teléfono", class: "block text-sm font-bold text-gray-700 mb-2" %>
      <%= form.text_field :phone_number, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>
  </div>

  <%# --- Campos de Contraseña --- %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :password, "Contraseña", class: "block text-sm font-bold text-gray-700 mb-2" %>
      <%= form.password_field :password, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>
    <div>
      <%= form.label :password_confirmation, "Confirmar Contraseña", class: "block text-sm font-bold text-gray-700 mb-2" %>
      <%= form.password_field :password_confirmation, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>
  </div>

  <%# --- Botones de Acción --- %>
  <div class="flex items-center justify-end space-x-4 pt-4">
    <%= link_to 'Cancelar', workshop_mechanics_path(@workshop), class: "inline-block align-baseline font-bold text-sm text-gray-600 hover:text-gray-800" %>
    <%= form.submit "Guardar Mecánico", class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
  </div>
<% end %>
