<%= form_with(model: plan, local: true, html: { class: "max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md space-y-6" }) do |form| %>
  <% if plan.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(plan.errors.count, "error") %> impidieron guardar este plan:</h2>
      <ul>
        <% plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nombre del Plan", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :price, "Precio (COP)", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.number_field :price, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :duration, "DuraciÃ³n (en meses)", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.number_field :duration, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :details, "Detalles del Plan", class: "block text-sm font-bold text-gray-700 mb-2" %>
    <%= form.text_area :details, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-end space-x-4">
    <%= link_to 'Cancelar', plans_path, class: "inline-block align-baseline font-bold text-sm text-gray-600 hover:text-gray-800" %>
    <%= form.submit "Guardar Plan", class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
  </div>
<% end %>
