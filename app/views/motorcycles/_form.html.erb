<%= form_with(model: motorcycle, class: "space-y-6") do |form| %>
  <% if motorcycle.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <h2 class="font-bold">
        <%= pluralize(motorcycle.errors.count, "error") %> impidi√≥ que esta motocicleta fuera guardada:
      </h2>
      <ul>
        <% motorcycle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :license_plate, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :license_plate, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :brand, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :brand, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :model, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :model, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :year, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :year, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
  
  <div class="field">
    <%= form.label :client_id, "Propietario", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :client_id, Client.all, :id, :name, { prompt: 'Selecciona un propietario' }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
